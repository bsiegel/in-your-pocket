{
  "manifest_version": 2,

  "name": "In Your Pocket",
  "description": "Chrome client for Pocket",
  "version": "0.1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "./icons/iyp-icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"],
    "persistent": false
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "identity",
    "<all_urls>"
  ]
}
